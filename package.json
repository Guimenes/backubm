{
  "name": "seminario-ubm-backend",
  "version": "1.0.0",
  "description": "Backend para o sistema de gerenciamento do Seminário de Ensino e Extensão da UBM",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "npm run build && npm start",
    "init:permissions": "ts-node src/scripts/run-init-permissions.ts",
    "migrate:eventos:curso": "ts-node src/scripts/migrate-eventos-curso.ts",
  "migrate:eventos:curso:dist": "node dist/scripts/migrate-eventos-curso.js",
    "test": "jest",
    "seed": "ts-node src/scripts/seed.ts",
    "clear:events": "ts-node src/scripts/clear-events.ts"
  },
  "keywords": ["seminario", "ubm", "express", "mongodb", "typescript"],
  "author": "Sistema UBM",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/cors": "^2.8.13",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.4"
  }
}
